<%= provide(:title, "Reset Password") %>

<% if has_errors! %>
	<span class="span12 alert alert-error">
		<%= devise_error_messages! %>
	</span>
<% end %>

<h2 class="center">Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  	<div class="container">
	  	<span class="reset span12">
		  	<span class="left span6">
		  		<div class="labels">
		  			<%= f.label :email %>
		  		</div>
		  	</span>
		  	<span class="right span6">
		  		<div class="fields">
		  			<%= f.email_field :email, placeholder: "john@sample.com" %>
		  		</div>
		  	</span>
		</span>
	</div>

  	<div class="center">
  		<%= f.submit "Send me reset password instructions", class: "btn btn-custom btn-large btn-primary" %>
  	</div>
<% end %>

<%= render "devise/shared/links" %>
