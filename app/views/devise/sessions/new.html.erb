<%= provide(:title, "Sign In") %>

<h2 class="center">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  	
  	<div class="container">
	  	<span class="signin span12">
		  	<span class="left span6">
		  		<div class="labels">
		  			<%= f.label :email %>
		  		</div>
		  		<div class="labels">
		  			<%= f.label :password %>
		  		</div>
	  			<% if devise_mapping.rememberable? -%>
	  		  	<div class="remember labels">
	  		  		<%= f.label :remember_me %>
	  		  	</div>
	  			<% end -%>
		  	</span>

		  	<span class="right span6">
		  		<div class="fields">
		  			<%= f.email_field :email, placeholder: "test@example.com" %>
		  		</div>
		  		<div class="fields">
		  			<%= f.password_field :password, placeholder: "password1" %>
		  		</div>
			  	<% if devise_mapping.rememberable? -%>
			    	<div class="remember fields">
			    		<%= f.check_box :remember_me %>
			    	</div>
			  	<% end -%>
		  	</span>
	  	</span>
  	</div>

  	<div class="center">
  		<%= f.submit "Sign in", class: "btn btn-custom btn-large btn-primary" %>
  	</div>
<% end %>

<%= render "devise/shared/links" %>
