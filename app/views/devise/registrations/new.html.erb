<h2 class="center">Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>

  	<div class="container">
	  	<div class="signup">
		  	<div class="left">
				<div class="labels">
					<%= f.label :name %>
				</div>
				<div class="labels">
					<%= f.label :email %>
				</div>
				<div class="labels">
					<%= f.label :password %>
				</div>
				<div class="labels">
					<%= f.label :password_confirmation %>
				</div>
			</div>
		  
			<div class="right">
				<div class="fields">
					<%= f.text_field :name %>
				</div>
				<div class="fields">
					<%= f.email_field :email %>
				</div>
				<div class="fields">
					<%= f.password_field :password %>
				</div>
				<div class="fields">
					<%= f.password_field :password_confirmation %>
				</div>
			</div>
		</div>
	</div>

	<div class="center">
		<%= f.submit "Sign up", class: "btn btn-custom btn-large btn-primary" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
