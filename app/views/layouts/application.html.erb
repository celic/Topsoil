<!DOCTYPE html>
<html>
<head>
  	<title>Topsoil | <%= yield(:title) %></title>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<div class="span12">
			<%= content_tag(:div, flash[:error], :class => 'alert alert-error', :id => "flash_error") if flash[:error] %>
			<%= content_tag(:div, flash[:notice], :class => 'alert alert-warning', :id => "flash_notice") if flash[:notice] %>
			<%= content_tag(:div, flash[:alert], :class => 'alert alert-info', :id => "flash_alert") if flash[:alert] %>
			<%= content_tag(:div, flash[:success], :class => 'alert alert-success', :id => "flash_alert") if flash[:success] %>
		</div>
		<%= yield %>
		<%= render 'layouts/footer' %>
	</div>
</body>
</html>
