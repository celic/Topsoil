<%= provide(:title, "New Idea") %>

<div class="row">
	<div class="container">
		<div class="span12">
			<div class="span8 offset2">
				<h1>New Idea</h1>
				<div class="well">
					<%= form_for @idea do |f| %>

						<%= f.label :name %>
						<%= f.text_field :name, class: "input-block-level" %>

						<%= f.label :description %>
						<%= f.text_area :description, class: "input-block-level", rows: 10 %>

						<%= f.label :private, "Keep idea private?" %>
						<%= f.check_box :private, class: "input-block-level" %>

						<div class="clearfix"></div>

						<div class="push-top center">
							<%= f.submit class: "btn btn-large btn-primary btn-custom" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>