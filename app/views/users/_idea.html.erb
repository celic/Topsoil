<% if current_user == idea.user %>
	<tr>
		<td>
			<%= link_to idea.name, idea %>
		</td>
		<td>
			<%= idea.rating %>
		</td>
		<td>
			<%= distance_of_time_in_words_to_now idea.created_at %> ago
		</td>
	</tr>
<% else %>
	<% if idea.public? %>
		<tr>
			<td>
				<%= link_to idea.name, idea %>
			</td>
			<td>
				<%= idea.rating %>
			</td>
			<td>
				<%= distance_of_time_in_words_to_now idea.created_at %> ago
			</td>
		</tr>
	<% end %>
<% end %>