<%= provide(:title, "Search") %>
<h2>Search results for '<%= params[:search] %>'</h2>

<% if @ideas.empty? %>
	<p>Your search returned no results.</p>
<% else %>
	<p>Your search returned <%= @ideas.size %> results.</p>
	<%= will_paginate @ideas %>
	<table class="table table-bordered table-striped">
	  <tr>
	    <th>Name</th>
	    <th>Creator</th>
	    <th>Rating</th>
	    <th>Created</th>
	  </tr>
	  <%= render @ideas %>
	</table>

<% end %>
