<%= provide(:title, 'Home') %>
<div class="container center">
	<h1>Welcome to Topsoil</h1>
	<h3>The fertilizer for growing new ideas!</h3>
	<br />
	<% if user_signed_in? %>
		<h3>Welcome Back!</h3>
	<% else %>
		<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-custom btn-large btn-primary" %>
		<%= link_to "Sign In", new_user_session_path, class: "btn btn-custom btn-large btn-primary" %>
	<% end %>
</div>
